<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">

        <shape>
            <solid
                android:color="#8c8c8c"/>
            <corners
                android:radius="8dp"/>

            <stroke
                android:width="1dp"
                android:color="#8c8c8c"/>
        </shape>
    </item>
    <item >
        <shape>
            <solid
                android:color="#666666"/>
            <corners
                android:radius="8dp"/>

            <stroke
                android:width="1dp"
                android:color="#666666"/>
        </shape>
    </item>
</selector>
