<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#373737</item>
        <item name="colorPrimaryDark">#291818</item>
        <item name="colorAccent">#e7393a</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#373737</item>
        <item name="colorPrimaryDark">#291818</item>
        <item name="colorAccent">#e7393a</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
        <item name="colorButtonNormal">#ab0001</item>
    </style>




    <style name="AppTheme.float" parent="Theme.AppCompat.Dialog">

        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#fec100</item>

    </style>


</resources>
